{
	"name": "moul",
	"private": true,
	"description": "The minimalist publishing tool for photographers",
	"license": "MIT",
	"sideEffects": false,
	"scripts": {
		"build": "remix build",
		"dev": "remix build && run-p dev:*",
		"dev:node": "cross-env NODE_ENV=development nodemon ./build/index.js --watch ./build/index.js",
		"dev:remix": "remix watch",
		"dev:css": "npx tailwindcss -i ./app/assets/moul.css -o ./app/moul.css --watch",
		"postinstall": "remix setup node",
		"start": "cross-env NODE_ENV=production node ./build/index.js",
		"prepare": "husky install"
	},
	"dependencies": {
		"@remix-run/express": "1.3.3",
		"@remix-run/react": "1.3.3",
		"compression": "1.7.4",
		"cross-env": "7.0.3",
		"express": "4.17.1",
		"image-layout": "0.4.1",
		"morgan": "1.10.0",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"remix": "1.3.3"
	},
	"devDependencies": {
		"@remix-run/dev": "1.3.3",
		"@types/react": "17.0.24",
		"@types/react-dom": "17.0.9",
		"eslint": "8.11.0",
		"husky": "7.0.4",
		"lint-staged": "12.3.7",
		"nodemon": "2.0.15",
		"npm-run-all": "4.1.5",
		"prettier": "2.6.1",
		"tailwindcss": "3.0.23",
		"typescript": "4.5.5"
	},
	"engines": {
		"node": ">=14"
	},
	"lint-staged": {
		"*.{ts,tsx,mdx,js,css,md}": "prettier --write"
	}
}
